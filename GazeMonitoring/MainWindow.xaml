<Window x:Class="GazeMonitoring.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:GazeMonitoring"
        xmlns:tobiiCoreMonitoring="clr-namespace:TobiiCoreMonitoring;assembly=TobiiCoreMonitoring"
        xmlns:entities="clr-namespace:TobiiCoreMonitoring.Entities;assembly=TobiiCoreMonitoring"
        mc:Ignorable="d"
        Title="MainWindow" Height="157.121" Width="333.205">
    <Window.Resources>
        <ObjectDataProvider x:Key="dataFromEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="entities:DataStream"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid>
        <ComboBox Name="CmbDataStreams" HorizontalAlignment="Left" Margin="33,30,0,0" VerticalAlignment="Top" Width="277" SelectionChanged="CmbDataStreams_SelectionChanged" ItemsSource="{Binding Source={StaticResource dataFromEnum}}" SelectedIndex="0">
        </ComboBox>
        <Button Name ="BtnStart" Content="Start" HorizontalAlignment="Left" Margin="33,71,0,0" VerticalAlignment="Top" Width="75" Click="BtnStart_Click"/>
        <Button Name ="BtnStop" Content="Stop" HorizontalAlignment="Left" Margin="130,71,0,0" VerticalAlignment="Top" Width="75" Click="BtnStop_Click" IsEnabled="False"/>

    </Grid>
</Window>
