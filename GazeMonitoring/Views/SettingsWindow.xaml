<Window x:Class="GazeMonitoring.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GazeMonitoring.Views"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="586.842"
        Visibility="{Binding IsVisible,Mode=TwoWay,Converter={StaticResource BooleanToVisibilityConverter}}"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <ContentControl Content="{Binding CurrentViewModel}" Margin="176,0,0,0">
        </ContentControl>
        <Button Content="Options" HorizontalAlignment="Left" Margin="43,73,0,0" VerticalAlignment="Top" Width="97" Command="{Binding ShowOptions}"/>
        <Button Content="Configurations" HorizontalAlignment="Left" Margin="43,123,0,0" VerticalAlignment="Top" Width="97" Height="21" Command="{Binding ShowMonitoringConfigurations}" />
    </Grid>
</Window>
